{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-set-title",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$APPDATA/csv-index-cache" },
        { "path": "$APPDATA/csv-index-cache/*" }
      ]
    },
    "dialog:default"
  ]
}
