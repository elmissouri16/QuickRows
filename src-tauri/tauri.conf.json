{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QuickRows",
  "version": "0.1.0",
  "identifier": "com.el.csv-viewer",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "QuickRows",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "fileAssociations": [
      {
        "ext": ["csv"],
        "name": "CSV File",
        "mimeType": "text/csv",
        "role": "Viewer"
      }
    ],
    "linux": {
      "deb": {
        "desktopTemplate": "desktop.template",
        "postInstallScript": "scripts/postinstall.sh",
        "files": {
          "/usr/bin/quickrows": "scripts/quickrows"
        }
      },
      "rpm": {
        "files": {
          "/usr/bin/quickrows": "scripts/quickrows"
        }
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
